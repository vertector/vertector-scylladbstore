# ScyllaDB Connection Configuration
# Copy this file to .env and update with your actual configuration

# ScyllaDB Contact Points (comma-separated list of node addresses)
SCYLLADB_CONTACT_POINTS=127.0.0.1,127.0.0.2,127.0.0.3

# ScyllaDB Port
SCYLLADB_PORT=9042

# Keyspace Name
SCYLLADB_KEYSPACE=langgraph_memory

# Authentication (Optional)
# Uncomment and set if your ScyllaDB cluster requires authentication
# SCYLLADB_USERNAME=your_username
# SCYLLADB_PASSWORD=your_password

# Connection Pool Settings
SCYLLADB_PROTOCOL_VERSION=4
SCYLLADB_EXECUTOR_THREADS=4
SCYLLADB_CONNECT_TIMEOUT=10.0
SCYLLADB_REQUEST_TIMEOUT=10.0
SCYLLADB_CONTROL_CONNECTION_TIMEOUT=10.0

# Store Configuration
SCYLLADB_USE_NAMESPACE_TABLE=true
SCYLLADB_MAX_BATCH_SIZE=100
SCYLLADB_ENABLE_COMPRESSION=true

# Logging
SCYLLADB_LOG_LEVEL=INFO
